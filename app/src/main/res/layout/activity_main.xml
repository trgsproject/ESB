<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="0dp">


                <ImageView
                    android:id="@+id/imageLogo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/banner"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/txtSignUp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:letterSpacing="0.03"
                    android:text="Sign up"
                    android:textColor="#640064"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtUsername"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Username"
                    android:textColorHint="#A9A9A9"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:background="@drawable/mybutton"/>

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:hint="Password"
                    android:textColorHint="#A9A9A9"
                    android:inputType="textPassword"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:background="@drawable/mybutton" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:hint="Name"
                    android:textColorHint="#A9A9A9"
                    android:inputType="textCapSentences"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:background="@drawable/mybutton" />

                <Spinner
                    android:id="@+id/txtLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:hint="Work"
                    android:completionThreshold="1"
                    android:padding="15dp"
                    android:textAlignment="inherit"
                    style="@android:style/Widget.Spinner"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:drawableStart="@drawable/ic_baseline_work_24"
                    android:drawablePadding="25dp"/>

                <AutoCompleteTextView
                    android:id="@+id/txtSubsp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:hint="Sub Specialty"
                    android:textColorHint="#A9A9A9"
                    android:completionThreshold="1"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:drawableStart="@drawable/ic_baseline_work_24"
                    android:drawablePadding="15dp"/>

                <EditText
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Email Address"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#A9A9A9"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:background="@drawable/mybutton" />

                <EditText
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Phone Number"
                    android:textColorHint="#A9A9A9"
                    android:layout_gravity="center"
                    android:inputType="phone"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:background="@drawable/mybutton" />

                <TextView
                    android:id="@+id/txtCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Created At"/>

                <Button
                    android:id="@+id/buttonSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_button3"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginTop="25dp"
                    app:backgroundTint="#640064"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/textLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="Already have an account"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#640064"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_button3"
                    app:backgroundTint="@color/white"/>


                <TextView
                    android:id="@+id/AddNewSurgeonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newSurgeonName"
                    android:textAlignment="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#640064"
                    android:visibility="gone"
                    android:onClick="AddNewSurgeonName"
                    android:layout_marginBottom="30dp"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</RelativeLayout>