<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPatientManually"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- for scroll view -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_navigation">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="0dp">

                <!-- title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="19dp"
                    android:text="Register Patient Manually"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <!-- mrn patient -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MRN"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textMRN"
                    android:hint="MRN"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- patient name -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textName"
                    android:hint="Name"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- patient age -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textAge"
                    android:hint="Age"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- patient gender -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/textGender"
                    android:hint="Gender"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- patient nation -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewNation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textNation"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />


                <!-- check nationality -->
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioButton
                        android:id="@+id/check_Malaysian"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="Malaysian"
                        android:padding="16dp"
                        android:button="@color/zxing_transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:elevation="4dp"
                        android:drawableStart="@drawable/malaysian"
                        android:drawablePadding="15dp"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton
                        android:id="@+id/check_NonMalaysian"
                        android:text="Non-Malaysian"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:button="@color/zxing_transparent"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:elevation="4dp"
                        android:drawableStart="@drawable/nonmalaysian"
                        android:drawablePadding="15dp"
                        android:onClick="onRadioButtonClicked"/>

                </RadioGroup>


                <!-- patient race list for malay-->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewRaceList"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/textRaceList"
                    android:visibility="gone"
                    android:hint="Race List"
                    android:saveEnabled="false"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />



                <!-- patient country for non-malay -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:visibility="gone"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/textCountry"
                    android:hint="Country"
                    android:visibility="gone"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="10dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- ward name -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewWard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ward Name"
                    android:textColor="#808080"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="15sp" />

                <AutoCompleteTextView
                    android:id="@+id/textWard"
                    android:hint="Ward"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- Surgical team  Name-->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewSurgicalTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surgeon Name"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textSurgicalTeam"
                    android:hint="Surgeon Name"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B" />


                <!-- diagnosis desc -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/view_name_diagnosis_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis Description"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textDesc"
                    android:hint="Diagnosis Description"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B"/>


                <!-- Procedure Name 1-->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewProcedureName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Procedure Name*"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp"  />

                <AutoCompleteTextView
                    android:id="@+id/textProcedureName"
                    android:hint="Procedure Name 1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B"/>


                <!-- Procedure Name 2-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <AutoCompleteTextView
                        android:id="@+id/ed_ProcedureName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Procedure Name 2"
                        android:textSize="16sp"
                        android:background="@drawable/shape2"
                        android:visibility="gone"
                        android:layout_marginLeft="25dp"
                        android:paddingStart="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:textColorHint="#6B6B6B"/>


                    <ImageView
                        android:id="@+id/image_remove1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/black"
                        android:visibility="gone"
                        android:layout_marginRight="27dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_close_24"
                        android:onClick="RemoveProcedureName2"/>

                </LinearLayout>

                <!-- Procedure Name 3-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <AutoCompleteTextView
                        android:id="@+id/ed_ProcedureName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Procedure Name 3"
                        android:textSize="16sp"
                        android:background="@drawable/shape2"
                        android:layout_marginLeft="25dp"
                        android:visibility="gone"
                        android:paddingStart="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:textColorHint="#6B6B6B"/>


                    <ImageView
                        android:id="@+id/image_remove2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/black"
                        android:visibility="gone"
                        android:layout_marginRight="27dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_close_24"
                        android:onClick="RemoveProcedureName3"/>

                </LinearLayout>

                <!-- Add Procedure Name -->
                <TextView
                    android:id="@+id/buttonAddProcedure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addProcedure"
                    android:textColor="#800080"
                    android:textAlignment="viewEnd"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:onClick="AddProcedure" />



                <!-- Sub Specialty -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewsSubSpecialty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sub Specialty"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textSubSpecialty"
                    android:hint="Sub Specialty"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B"/>



                <!-- Last Meal Date-->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewLastMealDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Meal (Date)*"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textLastMealDate"
                    android:hint="0000-00-00"
                    android:completionThreshold="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B"/>


                <!-- Last Meal Time -->
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewLastMealTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Meal (Time)*"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textLastMealTime"
                    android:hint="00:00:00"
                    android:completionThreshold="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:background="@drawable/shape2"
                    android:padding="15dp"
                    android:drawableEnd="@drawable/ic_baseline_access_time_24"
                    android:textColor="@color/black"
                    android:textColorHint="#6B6B6B"/>


                <!-- User role -->
                <TextView
                    android:id="@+id/textUserRole"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>



                <!-- cancel button and save button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    tools:layout_editor_absoluteX="-16dp"
                    tools:layout_editor_absoluteY="0dp">

                    <!-- cancel button -->
                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:background="@drawable/red_bg"
                        android:text="Cancel"
                        android:layout_marginRight="5dp"
                        android:textAllCaps="false"
                        android:textColor="#FAF6F6"
                        android:textStyle="bold"
                        app:backgroundTint="#FF0000"
                        app:cornerRadius="10dp"
                        app:elevation="3dp"
                        app:strokeColor="#FF0000"
                        app:strokeWidth="1dp" />

                    <!-- save button -->
                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:background="@drawable/green_bg"
                        android:text="Save"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textColor="#FAF6F6"
                        android:textStyle="bold"
                        app:backgroundTint="#32CD32"
                        app:cornerRadius="10dp"
                        app:elevation="3dp"
                        app:strokeColor="#32CD32"
                        app:strokeWidth="1dp"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</RelativeLayout>